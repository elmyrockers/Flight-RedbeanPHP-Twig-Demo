<!DOCTYPE html>
<html>
	<head>
		<title>Flight + RedbeanPHP + Twig Demo</title>
		<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
		<link rel="stylesheet" type="text/css" href="assets/vendor/fontawesome-free-6.7.2-web/css/all.min.css">
		<style type="text/css">
			body { background-color: #2E2E2E }
		</style>
	</head>
	<body>
		<div class="container">
			<section class="row mt-5">
				<div class="col p-5 bg-white rounded-5">
					{{ flash|raw }}
					<h1>List of Users:</h1>
					<table class="table table-bordered table-hover">
						<thead class="table-dark">
							<tr>
								<th>ID</th>
								<th>Name</th>
								<th>Email</th>
								<th>Website</th>
								<th>Created At</th>
								<th>Updated At</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>
							{% for row in users %}
								<tr>
									<td>{{ row.id }}</td>
									<td>{{ row.name }}</td>
									<td>{{ row.email }}</td>
									<td>{{ row.website }}</td>
									<td>{{ row.created_at }}</td>
									<td>{{ row.updated_at }}</td>
									<td>
										<div class="btn-group" role="group">
											<a class="btn btn-primary" href="/users/edit/{{ row.id }}">
												<i class="fa-regular fa-pen-to-square"></i>
											</a>
											<a class="btn btn-danger" href="/users/delete/{{ row.id }}">
												<i class="fa-regular fa-trash-can"></i>
											</a>
										</div>
									</td>
								</tr>
							{% else %}
								<tr>
									<td class="text-center" colspan="7">No result</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
					<a class="btn btn-dark" href="/users/new">
						New User
						<i class="fa-solid fa-user-plus ms-1"></i>
					</a>
				</div>
			</section>			
		</div>
	</body>
</html>